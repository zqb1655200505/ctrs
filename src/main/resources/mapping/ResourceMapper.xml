<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zqb.IDao.NoticeMapper">
    <insert id="addResource">
        INSERT INTO
          resource(resource_type,user_id,upload_time,save_path,download_times,remark)
        VALUES
          (#{resourceType},#{userId},#{uploadTime},#{savePath},#{downloadTimes},#{remark})
    </insert>

    <select id="selectByPrimaryKey" parameterType="int" resultType="resource">
        SELECT
          *
        FROM
          resource
        WHERE
          resource_id=#{resourceId}
    </select>

    <select id="getAllResource" resultType="resource">
        SELECT
          *
        FROM
          resource
    </select>
</mapper>